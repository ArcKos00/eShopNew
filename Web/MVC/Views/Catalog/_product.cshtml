@model CatalogItem
@inject IBasketService basketService


<form>
    <img class="esh-catalog-thumbnail" src="@Model.ImageUrl" />

    <div class="esh-catalog-name">
        <span>@Model.Name</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Cost.ToString("N2")</span>
    </div>
    <button onclick=basketService>Add to Basket</button>
    <input type="hidden" asp-for="@Model.Id" name="id" />
</form>